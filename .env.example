# =============================================================================
# Dynamo AI Platform — Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# DO NOT commit .env to version control.
# =============================================================================

# ── Anthropic / Claude ───────────────────────────────────────────────────────
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096

# ── Azure Entra ID (formerly Azure AD) ──────────────────────────────────────
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=
AZURE_AD_REDIRECT_URI=http://localhost:8080/auth/callback

# ── Database ─────────────────────────────────────────────────────────────────
# When running inside Docker Compose, the hostname is "postgres" (service name).
# When running locally outside Docker, use "localhost".
DATABASE_URL=postgresql://dynamo:localdev@postgres:5432/dynamo_ai
DATABASE_POOL_SIZE=10

# ── Redis ────────────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379

# ── AWS / Infrastructure ─────────────────────────────────────────────────────
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SNS_SECURITY_TOPIC_ARN=
S3_AUDIT_BUCKET=

# ── Open WebUI (Chat Frontend) ───────────────────────────────────────────────
OPENWEBUI_NAME=Dynamo AI
WEBUI_AUTH=true
ENABLE_OAUTH_SIGNUP=true
OAUTH_PROVIDER_NAME=Microsoft
OPENWEBUI_ADMIN_EMAIL=admin@dynamo-ai.local
OPENWEBUI_ADMIN_PASSWORD=admin

# ── Apache Superset (Analytics) ──────────────────────────────────────────────
SUPERSET_SECRET_KEY=superset-local-dev-secret-change-me
SUPERSET_ADMIN_USERNAME=admin
SUPERSET_ADMIN_PASSWORD=admin
SUPERSET_ADMIN_EMAIL=admin@dynamo-ai.local
SUPERSET_PORT=8088

# ── Claude Engine (Middleware) ───────────────────────────────────────────────
NODE_ENV=development
PORT=3001
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:8080
# Budget enforcement: "soft" (warn only), "hard" (block at limit), "none" (disabled)
TOKEN_BUDGET_ENFORCEMENT=soft
# Auth: "mock" for local dev (no JWT required), "oidc" for production
AUTH_MODE=mock
# JWT secret must match WEBUI_SECRET_KEY in docker-compose.yml
JWT_SECRET=dynamo-webui-local-dev-secret

# ── Observability ────────────────────────────────────────────────────────────
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
SENTRY_DSN=
